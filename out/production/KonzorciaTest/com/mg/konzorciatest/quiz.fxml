<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="base" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mg.konzorciatest.Controller">
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
            <children>
                <Label text="Welcome to the geography quiz!"/>
                <Button onAction="#handleStartButton" text="Start Quiz"/>
            </children>
        </VBox>
    </center>
    <bottom>
        <Pane BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="counterLabel"/>
            </children>
        </Pane>
    </bottom>
</BorderPane>
